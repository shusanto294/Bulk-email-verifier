<style>
    .stats { 
        display: flex; 
        gap: 20px; 
        margin-bottom: 30px; 
    }
    .stat-card { 
        flex: 1; 
        background: white; 
        padding: 2rem; 
        border-radius: 15px; 
        text-align: center; 
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid #e9ecef;
    }
    .stat-value { 
        font-size: 2.5rem; 
        font-weight: bold; 
        margin: 10px 0; 
    }
    .stat-note {
        font-size: 12px;
        color: #666;
        margin-top: -5px;
    }
    .total { color: #333; }
    .verified { color: #28a745; }
    .invalid { color: #dc3545; }
    .pending { color: #ffc107; }
    .back-link { 
        display: inline-block; 
        margin-bottom: 20px; 
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
    }
    .back-link:hover {
        color: #764ba2;
    }
    .download-btn {
        display: inline-block;
        margin-top: 10px;
        padding: 8px 16px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-decoration: none;
        border-radius: 10px;
        font-size: 14px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    .download-btn:hover {
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }
    .pagination-info {
        margin: 15px 0;
        font-size: 14px;
        color: #666;
    }
    .pagination-controls {
        display: flex;
        gap: 5px;
        margin-top: 20px;
        justify-content: center;
    }
    .pagination-btn {
        padding: 8px 12px;
        border: 1px solid #ddd;
        text-decoration: none;
        color: #007bff;
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    .pagination-btn:hover {
        background: #f5f5f5;
        text-decoration: none;
        color: #007bff;
    }
    .pagination-btn.active {
        background: #007bff;
        color: white;
        border-color: #007bff;
    }
    .content-section {
        background: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        margin-bottom: 2rem;
    }
</style>
<!-- Navigation -->
        <a href="/upload" class="back-link">
            <i class="fas fa-arrow-left me-2"></i>Back to Uploads
        </a>

        <!-- Upload Details -->
        <div class="content-section">
            <h2><i class="fas fa-file-csv me-2"></i>Upload Details: <%= upload.filename %></h2>
            
            <div class="stats">
                <div class="stat-card">
                    <div><i class="fas fa-envelope me-2"></i>Total Emails</div>
                    <div class="stat-value total"><%= totalEmails %></div>
                    <a href="/upload/<%= upload._id %>/download/all" class="download-btn">
                        <i class="fas fa-download me-1"></i>Download All
                    </a>
                </div>
                <div class="stat-card">
                    <div><i class="fas fa-check-circle me-2"></i>Verified</div>
                    <div class="stat-value verified"><%= stats.verified %></div>
                    <% if (stats.verified > 0) { %>
                        <a href="/upload/<%= upload._id %>/download/verified" class="download-btn">
                            <i class="fas fa-download me-1"></i>Download Verified
                        </a>
                    <% } %>
                </div>
                <div class="stat-card">
                    <div><i class="fas fa-times-circle me-2"></i>Invalid</div>
                    <div class="stat-value invalid"><%= stats.invalid %></div>
                    <% if (stats.invalid > 0) { %>
                        <a href="/upload/<%= upload._id %>/download/invalid" class="download-btn">
                            <i class="fas fa-download me-1"></i>Download Invalid
                        </a>
                    <% } %>
                </div>
                <div class="stat-card">
                    <div><i class="fas fa-clock me-2"></i>Pending</div>
                    <div class="stat-value pending"><%= stats.pending %></div>
                    <% if (stats.pending > 0) { %>
                        <a href="/upload/<%= upload._id %>/download/pending" class="download-btn">
                            <i class="fas fa-download me-1"></i>Download Pending
                        </a>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Email List -->
        <div class="content-section">
            <h3><i class="fas fa-list me-2"></i>Email List</h3>
            <div class="stat-note" style="margin-bottom: 15px;">
                <i class="fas fa-info-circle me-1"></i>
                Showing page <%= page %> of <%= pages %> (50 emails per page)
            </div>
            
            <% if (emails.length > 0) { %>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th><i class="fas fa-envelope me-1"></i>Email</th>
                                <th><i class="fas fa-info-circle me-1"></i>Status</th>
                                <th><i class="fas fa-calendar me-1"></i>Verified At</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% emails.forEach(email => { %>
                                <tr>
                                    <td><%= email.email %></td>
                                    <td>
                                        <span class="status-badge <%= email.status %>">
                                            <% if (email.status === 'pending') { %>
                                                <i class="fas fa-clock me-1"></i>
                                            <% } else if (email.status === 'verified') { %>
                                                <i class="fas fa-check me-1"></i>
                                            <% } else { %>
                                                <i class="fas fa-times me-1"></i>
                                            <% } %>
                                            <%= email.status %>
                                        </span>
                                    </td>
                                    <td><%= email.verifiedAt ? email.verifiedAt.toLocaleString() : 'N/A' %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                
                <% if (pages > 1) { %>
                    <div class="pagination-controls">
                        <% if (page > 1) { %>
                            <a href="?page=<%= page-1 %>" class="pagination-btn">
                                <i class="fas fa-chevron-left me-1"></i>Previous
                            </a>
                        <% } %>
                        
                        <% 
                        const maxVisiblePages = 10;
                        let startPage, endPage;
                        
                        if (pages <= maxVisiblePages) {
                            startPage = 1;
                            endPage = pages;
                        } else {
                            const maxPagesBeforeCurrent = Math.floor(maxVisiblePages / 2);
                            const maxPagesAfterCurrent = Math.ceil(maxVisiblePages / 2) - 1;
                            
                            if (page <= maxPagesBeforeCurrent) {
                                startPage = 1;
                                endPage = maxVisiblePages;
                            } else if (page + maxPagesAfterCurrent >= pages) {
                                startPage = pages - maxVisiblePages + 1;
                                endPage = pages;
                            } else {
                                startPage = page - maxPagesBeforeCurrent;
                                endPage = page + maxPagesAfterCurrent;
                            }
                        }
                        
                        // Always show first page
                        if (startPage > 1) { %>
                            <a href="?page=1" class="pagination-btn">1</a>
                            <% if (startPage > 2) { %>
                                <span class="pagination-btn">...</span>
                            <% } 
                        }
                        
                        for (let i = startPage; i <= endPage; i++) { %>
                            <a href="?page=<%= i %>" class="pagination-btn <%= i == page ? 'active' : '' %>">
                                <%= i %>
                            </a>
                        <% } 
                        
                        // Always show last page
                        if (endPage < pages) { %>
                            <% if (endPage < pages - 1) { %>
                                <span class="pagination-btn">...</span>
                            <% } %>
                            <a href="?page=<%= pages %>" class="pagination-btn"><%= pages %></a>
                        <% } %>
                        
                        <% if (page < pages) { %>
                            <a href="?page=<%= parseInt(page)+1 %>" class="pagination-btn">
                                Next<i class="fas fa-chevron-right ms-1"></i>
                            </a>
                        <% } %>
                    </div>
                <% } %>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No emails found</h5>
                    <p class="text-muted">No emails were found for this upload.</p>
                </div>
            <% } %>
        </div>