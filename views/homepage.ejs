<script>
    // Email validation functionality
    document.getElementById('emailValidationForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const emailInput = document.getElementById('emailInput');
        const validateBtn = document.getElementById('validateBtn');
        const validationResult = document.getElementById('validationResult');
        
        const email = emailInput.value.trim();
        
        if (!email) {
            showValidationResult('Please enter an email address', 'invalid');
            return;
        }
        
        // Show loading state
        validateBtn.disabled = true;
        validateBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Validating...';
        // showValidationResult('Validating email address...', 'loading');
        
        try {
            const response = await fetch('/api/validate-email', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email: email })
            });
            
            const result = await response.json();
            
            if (result.valid) {
                showValidationResult(result.message, 'valid');
            } else {
                showValidationResult(result.message, 'invalid');
            }
            
        } catch (error) {
            console.error('Validation error:', error);
            showValidationResult('An error occurred while validating the email', 'invalid');
        } finally {
            // Reset button state
            validateBtn.disabled = false;
            validateBtn.innerHTML = '<i class="fas fa-check me-2"></i>Validate';
        }
    });
    
    function showValidationResult(message, type) {
        const validationResult = document.getElementById('validationResult');
        validationResult.textContent = message;
        validationResult.className = `homepage-validation-result ${type}`;
        validationResult.style.display = 'block';
        
        // Messages will remain visible permanently - no auto-hide
    }
    
    // Smooth scrolling for navigation links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
</script> 