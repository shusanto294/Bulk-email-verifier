<!-- User Info Section -->
<% if (user) { %>
<div class="user-info">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h4 class="mb-1"><i class="fas fa-user me-2"></i>Welcome, <%= user.firstName %> <%= user.lastName %></h4>
            <p class="mb-0 text-muted"><i class="fas fa-envelope me-1"></i><%= user.email %></p>
        </div>
        <div class="col-md-4">
            <div class="credit-display">
                <h4><i class="fas fa-coins me-2"></i><%= user.credits || 0 %> Credits</h4>
            </div>
        </div>
    </div>
</div>
<% } %>

<!-- Support Content -->
<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card">
            <div class="text-center mb-4">
                <div class="package-icon" style="background: var(--success-gradient);">
                    <i class="fas fa-life-ring"></i>
                </div>
                <h2 class="mb-3">Customer Support</h2>
                <p class="text-muted">
                    We're here to help! Send us a message and we'll get back to you within 24 hours.
                </p>
            </div>

            <form action="/support/contact" method="POST" id="contactForm" enctype="application/x-www-form-urlencoded">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="name" class="form-label">
                            <i class="fas fa-user me-1"></i>Full Name
                        </label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="name" 
                            name="name" 
                            required
                            <% if (user) { %>value="<%= user.firstName %> <%= user.lastName %>"<% } %>
                        >
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="email" class="form-label">
                            <i class="fas fa-envelope me-1"></i>Email Address
                        </label>
                        <input 
                            type="email" 
                            class="form-control" 
                            id="email" 
                            name="email" 
                            required
                            <% if (user) { %>value="<%= user.email %>"<% } %>
                        >
                    </div>
                </div>

                <div class="mb-3">
                    <label for="subject" class="form-label">
                        <i class="fas fa-tag me-1"></i>Subject
                    </label>
                    <select class="form-control" id="subject" name="subject" required>
                        <option value="">Please select a subject</option>
                        <option value="Technical Issue">Technical Issue</option>
                        <option value="Payment & Billing">Payment & Billing</option>
                        <option value="Feature Request">Feature Request</option>
                        <option value="Account Access">Account Access</option>
                        <option value="Data Export">Data Export</option>
                        <option value="General Inquiry">General Inquiry</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <div class="mb-4">
                    <label for="message" class="form-label">
                        <i class="fas fa-comment-alt me-1"></i>Message
                    </label>
                    <textarea 
                        class="form-control" 
                        id="message" 
                        name="message" 
                        rows="6" 
                        placeholder="Please describe your issue or question in detail..."
                        required
                    ></textarea>
                    <div class="form-text">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Please include any relevant details such as error messages, upload IDs, or steps to reproduce the issue.
                        </small>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-paper-plane me-2"></i>Send Message
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Support Information -->
